# ============================================
# SANCTUM STATEFUL AUTH CONFIGURATION
# ============================================
# Copy these settings to your .env file
# for proper Laravel Sanctum + Inertia.js auth
# ============================================

# App URLs (MUST match your development setup)
APP_URL=http://127.0.0.1:8000
FRONTEND_URL=http://127.0.0.1:5173

# Session Configuration
# CRITICAL: Use 'database' driver for stateful Sanctum
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_DOMAIN=127.0.0.1
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax
SESSION_ENCRYPT=false

# Sanctum Stateful Domains
# CRITICAL: Must include your frontend domain + port
SANCTUM_STATEFUL_DOMAINS=127.0.0.1:5173,localhost:5173,127.0.0.1:8000,localhost:8000

# Auth Guard (default should be 'web' for session-based)
AUTH_GUARD=web

# ============================================
# PRODUCTION SETTINGS (when deploying)
# ============================================
# APP_URL=https://yourdomain.com
# FRONTEND_URL=https://yourdomain.com
# SESSION_DOMAIN=yourdomain.com
# SESSION_SECURE_COOKIE=true
# SESSION_SAME_SITE=none
# SANCTUM_STATEFUL_DOMAINS=yourdomain.com
